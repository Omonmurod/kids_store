<%- include('includes/header')%>
<link rel="stylesheet" type="text/css" href="/css/login.css" />

<body>
  <form class="login_container" action="/brand/login" method="POST">
    <div class="login_frame" style="height: 460px">
      <div class="login_top">
        <span>Log In</span>
        <div style="font-family: nunito; font-size: 18px; color: #423127; font-weight: 600;">
          Back to Home <a href="/brand" style="color: #6440fb">Home</a>
        </div>
        <p style="font-family: nunito; font-size: 18px; color: #423127; font-weight: 600;">
          Do you have an account?
          <a href="/brand/sign-up" style="color: #6440fb">Sign Up</a>
        </p>
      </div>

      <div class="login_input_frame">
        <div class="login_input_container">
          <label style="font-family: nunito; font-size: 18px; color: #423127; font-weight: 600;">User name:</label>
          <input
            type="text"
            name="mb_nick"
            placeholder="User name"
            value=""
            required
          />
        </div>
        <div class="login_input_container">
          <label style="font-family: nunito; font-size: 18px; color: #423127; font-weight: 600;">Enter your Password:</label>
          <input
            type="password"
            name="mb_password"
            placeholder="Password"
            value=""
            required
          />
        </div>
      </div>

      <button class="login_btn btn" name="login" type="submit">Enter</button>
    </div>
  </form>
</body>

<%- include('includes/footer')%>
